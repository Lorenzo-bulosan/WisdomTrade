
@*graph element*@
<div class="tradingview-widget-container">
    <div id="Graph"></div>
</div>

@*function to draw graph of selected ticker*@
<script type="text/javascript">

    function DrawGraph(ticker) {
        new TradingView.widget(
            {
                "width": 980,
                "height": 400,
                //autosize": true,
                "symbol": ticker,
                "interval": "D",
                "timezone": "Etc/UTC",
                "theme": "light",
                "style": "1",
                "locale": "uk",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "hide_side_toolbar": false,
                "allow_symbol_change": true,
                "container_id": "Graph"
            }
        );
    }

</script>

<script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>